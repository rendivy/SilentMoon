<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- Styles for UI component -->
    <style name="PrimaryButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:height">@dimen/accentButtonHeight</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:text">@string/sign_up</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/violets_are_blue</item>
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
    </style>

    <style name="PrimaryTextFieldStyle">
        <item name="android:background">@drawable/rounded_text_fields</item>
        <item name="android:backgroundTint">#FFF2F3F7</item>
    </style>


    <style name="PrimaryTextViewStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>


    <!-- Styles for text -->
    <style name="PrimaryTextStyle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">"#3F414E"</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="RobotoNormal">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/light_dark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PrimaryTextInputStyle">
        <item name="android:fontFamily">@font/helvetica_neue_regular</item>
        <item name="android:textColor">@color/text_edit_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Theme.SilentMoon.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>


</resources>