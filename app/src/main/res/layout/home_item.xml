<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/padding10"
    android:paddingEnd="@dimen/padding10">

    <ImageView
        android:id="@+id/cardImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/focus_background_card" />

    <TextView
        android:id="@+id/cardLabel"
        style="@style/HomeItemLabelStyle"
        android:layout_width="@dimen/padding0"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/focus_card_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardImage" />

    <TextView
        android:id="@+id/cardDesc"
        style="@style/HomeItemDescStyle"
        android:layout_width="@dimen/padding0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/paddingTiny"
        android:layout_marginBottom="@dimen/padding20"
        android:text="@string/home_card_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardLabel" />


</androidx.constraintlayout.widget.ConstraintLayout>